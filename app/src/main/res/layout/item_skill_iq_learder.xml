<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/fab_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/image_type_learder"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/semi_fab_margin"
            android:layout_marginTop="@dimen/semi_fab_margin"
            android:src="@drawable/skill_iq_trimmed"/>

        <LinearLayout
            android:layout_marginStart="@dimen/semi_fab_margin"
            android:layout_marginEnd="@dimen/semi_fab_margin"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_name_learder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arthur Krawist"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:alpha=".7"/>

            <TextView
                android:id="@+id/textview_learder_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arthur Krawist"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:alpha=".6"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>